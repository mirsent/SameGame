.i-rate {
	margin: 0;
	padding: 0;
	font-size: 20px;
	font-weight: 400;
	font-style: normal;
    height: 30px;
    display: flex;
}

.i-rate-hide-input {
	display: none
}

.i-rate-star {
	display: inline-block;
	color: #e9e9e9
}

.i-rate-current {
	color: #F8D053
}

.i-rate-text {
	display: inline-block;
	vertical-align: middle;
	margin-left: 6px;
	font-size: 14px
}
